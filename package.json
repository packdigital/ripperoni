{
  "private": true,
  "name": "ripperoni",
  "author": "@packdigital",
  "repository": "https://github.com/packdigital/ripperoni.git",
  "workspaces": [
    "packages/*",
    "plugins/*",
    "projects/*",
    "themes/*",
    "tools/*"
  ],
  "scripts": {
    "clean": "lerna run clean --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "eslint . -f codeframe",
    "start": "yarn start:client",
    "start:client": "yarn workspace @sample/app start",
    "start:server": "yarn workspace @sample/server start",
    "prettify": "npx prettier \"./**/*.{js,ts,tsx}\" --write",
    "refresh": "lerna clean --yes && rm -rf node_modules yarn.lock && yarn install"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.0.5"
  }
}
