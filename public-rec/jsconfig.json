{
	"compilerOptions": {
		"baseUrl": "./",
    "jsx": "preserve",
    "paths": {
      "*": [
        "*",
        "src/*"
      ],
      "src/*": [
        "*",
        "src/*"
      ],
      "@assets/*": [
        "*",
        "src/assets/*"
      ],
      "@components/*": [
        "*",
        "src/components/*"
      ],
      "@images/*": [
        "*",
        "src/assets/images"
      ],
      "@layouts/*": [
        "*",
        "src/layouts/*"
      ],
      "@static/*": [
        "*",
        "static/*"
      ],
      "@theme/*": [
        "*",
        "src/@packdigital/gatsby-theme-ripperoni-components/*",
        "node_modules/@packdigital/gatsby-theme-ripperoni-components/src/*"
      ],
      "@utils/*": [
        "*",
        "node_modules/@packdigital/ripperoni-utilities/*"
      ]
    }
	},
	// Specifies a list of glob patterns that match files to be included in compilation.
	"include": [
    "./gatsby-browser.js",
    "./gatsby-config.js",
    "./gatsby-node.js",
    "./gatsby-ssr.js",
    "./src/**/*",
    "./functions",
    "./gatsby",
    "./plugins",
    "./scripts",
    "./node_modules/@packdigital/**/*",
    "./node_modules/@prg/**/*",
    "./gatsby"
  ],
	"exclude": [
    "./.cache",
    "./.netlify",
    "./.trash",
    "./public",
    "./static",
    "node_modules"
  ]
}
