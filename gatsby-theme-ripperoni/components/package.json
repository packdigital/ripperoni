{
  "name": "@packdigital/gatsby-theme-ripperoni-components",
  "description": "Ripperoni's UI components library",
  "author": "@packdigital",
  "version": "1.1.15",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "run-p start:**",
    "develop": "gatsby develop",
    "clean": "gatsby clean",
    "start:storybook": "start-storybook -s ./src/assets -p 9001",
    "start:gatsby": "DEBUG=development gatsby develop -H 0.0.0.0 -o",
    "reset": "git clean -dfx && git reset --hard && yarn",
    "version": "standard-version",
    "prepare-release": "run-s reset version",
    "publish-release": "yarn prepare-release && git push --follow-tags origin master && yarn publish --non-interactive",
    "build": "run-p 'build:!(storybook)'",
    "build:storybook": "build-storybook -c .storybook -o storybook",
    "build:gatsby": "gatsby build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/packdigital/gatsby-theme-ripperoni-components.git"
  },
  "dependencies": {
    "@loadable/component": "^5.12.0",
    "@theme-ui/match-media": "0.3.1",
    "@theme-ui/presets": "^0.3.0",
    "airbnb-prop-types": "^2.15.0",
    "debug": "^4.1.1",
    "deepmerge": "^4.2.2",
    "gatsby-image": "^2.4.0",
    "gatsby-plugin-react-helmet": "^3.3.0",
    "gatsby-plugin-react-svg": "^3.0.0",
    "gatsby-plugin-transition-link": "^1.18.0",
    "gatsby-source-filesystem": "^2.3.0",
    "gsap": "^3.3.4",
    "lodash.uniqueid": "^4.0.1",
    "react-error-boundary": "^2.0.2",
    "react-helmet": "^5.2.1",
    "react-intersection-observer": "^8.26.2"
  },
  "peerDependencies": {
    "@packdigital/ripperoni-utilities": "^2.0.21",
    "dateformat": "^3.0.3",
    "gatsby-plugin-theme-ui": "^0.3.0",
    "theme-ui": "^0.3.1"
  },
  "devDependencies": {},
  "prettier": "@packdigital/prettier-config-ripperoni"
}
